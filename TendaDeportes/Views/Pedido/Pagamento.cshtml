@model Pedido
<h2>Pagar agora</h2>
<p>Por favor indica os detalles do pagamento, e enviamosche o solicitado!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Pagamento" method="post">
    <h3>Enviar a</h3>
    <div class="form-group">
        <label>Nome:</label><input asp-for="Nome" class="form-control" />
    </div>
    <h3>Direccion</h3>
    <div class="form-group">
        <label>Direccion 1:</label><input asp-for="Linea1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Direccion 2:</label><input asp-for="Linea2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Direccion 3:</label><input asp-for="Linea3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Lugar:</label><input asp-for="Lugar" class="form-control" />
    </div>
    <div class="form-group">
        <label>Provincia:</label><input asp-for="Provincia" class="form-control" />
    </div>
    <div class="form-group">
        <label>Codigo Postal:</label><input asp-for="CP" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pais:</label><input asp-for="Pais" class="form-control" />
    </div>
    <h3>Opcions</h3>
    <div class="checkbox">
        <label>
            <input asp-for="EnvoltorioRegalo" /> Envolver o pedido para regalo
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Completar Pedido" />
    </div>
</form>