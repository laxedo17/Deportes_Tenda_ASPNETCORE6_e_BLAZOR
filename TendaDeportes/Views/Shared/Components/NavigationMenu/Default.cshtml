@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-categoria="">
        Inicio
    </a>
    @foreach (string categoria in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(categoria == ViewBag.SelectedCategory ? "btn-primary": "btn-outline-secondary")" asp-action="Index"
        asp-controller="Home" asp-route-categoria="@categoria" asp-route-productoPaxina="1">
            @categoria
        </a>
    }
</div>