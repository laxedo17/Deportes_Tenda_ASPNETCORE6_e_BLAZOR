@model Producto

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Nome
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>@Model?.Precio.ToString("c")</small>
            </span>
        </h4>
    </div>

    <form id="@Model?.ProductoID" asp-page="/Cesta" method="post">
        <input type="hidden" asp-for="ProductoID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model?.Descripcion
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Engadir a cesta
            </button>
        </span>
    </form>
</div>